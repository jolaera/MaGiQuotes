<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <application>
        <resource-bundle>
            <base-name>org.magi.quotes.presentation.core.common</base-name>
            <var>bundleCommon</var>
        </resource-bundle>

        <system-event-listener>
            <source-class>javax.faces.component.html.HtmlInputText</source-class>
            <system-event-class>javax.faces.event.PostValidateEvent</system-event-class>
            <system-event-listener-class>org.magi.quotes.core.web.PostValidationListener</system-event-listener-class>
        </system-event-listener>
        <system-event-listener>
            <source-class>javax.faces.component.html.HtmlInputText</source-class>
            <system-event-class>javax.faces.event.PreRenderComponentEvent</system-event-class>
            <system-event-listener-class>org.magi.quotes.core.web.PreRenderComponentListener</system-event-listener-class>
        </system-event-listener>

        <system-event-listener>
            <source-class>javax.faces.component.html.HtmlInputTextarea</source-class>
            <system-event-class>javax.faces.event.PostValidateEvent</system-event-class>
            <system-event-listener-class>org.magi.quotes.core.web.PostValidationListener</system-event-listener-class>
        </system-event-listener>
        <system-event-listener>
            <source-class>javax.faces.component.html.HtmlInputTextarea</source-class>
            <system-event-class>javax.faces.event.PreRenderComponentEvent</system-event-class>
            <system-event-listener-class>org.magi.quotes.core.web.PreRenderComponentListener</system-event-listener-class>
        </system-event-listener>

        <system-event-listener>
            <source-class>javax.faces.component.html.HtmlInputSecret</source-class>
            <system-event-class>javax.faces.event.PostValidateEvent</system-event-class>
            <system-event-listener-class>org.magi.quotes.core.web.PostValidationListener</system-event-listener-class>
        </system-event-listener>
        <system-event-listener>
            <source-class>javax.faces.component.html.HtmlInputSecret</source-class>
            <system-event-class>javax.faces.event.PreRenderComponentEvent</system-event-class>
            <system-event-listener-class>org.magi.quotes.core.web.PreRenderComponentListener</system-event-listener-class>
        </system-event-listener>

        <system-event-listener>
            <source-class>org.primefaces.component.password.Password</source-class>
            <system-event-class>javax.faces.event.PostValidateEvent</system-event-class>
            <system-event-listener-class>org.magi.quotes.core.web.PostValidationListener</system-event-listener-class>
        </system-event-listener>
        <system-event-listener>
            <source-class>org.primefaces.component.password.Password</source-class>
            <system-event-class>javax.faces.event.PreRenderComponentEvent</system-event-class>
            <system-event-listener-class>org.magi.quotes.core.web.PreRenderComponentListener</system-event-listener-class>
        </system-event-listener>

        <system-event-listener>
            <source-class>org.primefaces.component.calendar.Calendar</source-class>
            <system-event-class>javax.faces.event.PostValidateEvent</system-event-class>
            <system-event-listener-class>org.magi.quotes.core.web.PostValidationListener</system-event-listener-class>
        </system-event-listener>
        <system-event-listener>
            <source-class>org.primefaces.component.calendar.Calendar</source-class>
            <system-event-class>javax.faces.event.PreRenderComponentEvent</system-event-class>
            <system-event-listener-class>org.magi.quotes.core.web.PreRenderComponentListener</system-event-listener-class>
        </system-event-listener>
        
        <system-event-listener>
            <source-class>javax.faces.component.html.HtmlSelectOneMenu</source-class>
            <system-event-class>javax.faces.event.PostValidateEvent</system-event-class>
            <system-event-listener-class>org.magi.quotes.core.web.PostValidationListener</system-event-listener-class>
        </system-event-listener>
        <system-event-listener>
            <source-class>javax.faces.component.html.HtmlSelectOneMenu</source-class>
            <system-event-class>javax.faces.event.PreRenderComponentEvent</system-event-class>
            <system-event-listener-class>org.magi.quotes.core.web.PreRenderComponentListener</system-event-listener-class>
        </system-event-listener>

    </application>

</faces-config>
